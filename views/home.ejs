<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home-Kulkarni Foods</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css"
    />
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#f97316",
              secondary: "#ef4444",
            },
            borderRadius: {
              none: "0px",
              sm: "4px",
              DEFAULT: "8px",
              md: "12px",
              lg: "16px",
              xl: "20px",
              "2xl": "24px",
              "3xl": "32px",
              full: "9999px",
              button: "8px",
            },
          },
        },
      };
    </script>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <!-- <style>
      
    </style> -->
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header
      class="fixed top-0 left-0 right-0 bg-white shadow-sm z-40 px-4 py-3"
    >
      <div class="flex items-center">
        <button
          id="hamburger"
          class="w-10 h-10 flex items-center justify-center ripple rounded-full mr-3"
          aria-label="Open menu"
        >
          <i class="ri-menu-line text-xl"></i>
        </button>
        <h1 class="text-xl font-['Pacifico'] text-primary">Kulkarni Foods</h1>
      </div>
    </header>
    <!-- Sliding Menu -->
    <div
      id="menu-overlay"
      class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden"
    ></div>
    <nav
      id="slide-menu"
      class="fixed top-0 left-0 h-full w-80 bg-white z-50 slide-menu shadow-xl"
    >
      <div class="p-6">
        <!-- User Avatar -->
        <div class="flex items-center mb-8 pt-4">
          <div class="flex items-center justify-center w-12 h-12 bg-gray-200 rounded-full shadow-sm">
  <i class="ri-user-line text-gray-700 text-2xl"></i>
</div>
          <div class="ml-3">
            <p class="font-semibold text-gray-800"><%= username %></p>
            <p class="text-sm text-gray-500"><%= phone %></p>
          </div>
        </div>
        <!-- Menu Sections -->
        <div class="space-y-4 mb-8">
          <h3
            class="text-sm font-semibold text-gray-500 uppercase tracking-wide"
          >
            Menu Categories
          </h3>
          <button
            class="category-item w-full flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
            data-category="tiffin"
          >
            <span class="text-2xl mr-3">üç±</span>
            <span class="text-gray-700 font-medium">Tiffin</span>
          </button>
          <button
            class="category-item w-full flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
            data-category="meals"
          >
            <span class="text-2xl mr-3">üçΩÔ∏è</span>
            <span class="text-gray-700 font-medium">Meals</span>
          </button>
          <button
            class="category-item w-full flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
            data-category="snacks"
          >
            <span class="text-2xl mr-3">üçø</span>
            <span class="text-gray-700 font-medium">Snacks</span>
          </button>
        </div>
        <!-- Footer Links -->
        <!-- Change these links in the sliding menu section -->
            <div class="space-y-2 mt-8">
            <a
                href='/profile'
                class="nav-link flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
                data-nav="profile"
            >
                <div class="w-6 h-6 flex items-center justify-center mr-3">
                <i class="ri-user-line text-gray-600"></i>
                </div>
                <span class="text-gray-700">Profile</span>
            </a>
            <a
                href="/checkout"
                class="nav-link flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
                data-nav="checkout"
            >
                <div class="w-6 h-6 flex items-center justify-center mr-3">
                <i class="ri-shopping-cart-line text-gray-600"></i>
                </div>
                <span class="text-gray-700">Checkout</span>
            </a>
            <a
                href="/home/logout"
                class="nav-link flex items-center p-3 rounded-lg hover:bg-gray-50 transition-colors"
                >
                <div class="w-6 h-6 flex items-center justify-center mr-3">
                <i class="ri-logout-box-r-line text-gray-600"></i>
                </div>
                <span class="text-gray-700">Logout</span>
            </a>
            </div>
      </div>
    </nav>
    <!-- Main Content -->
    <main class="pt-20 pb-24 px-4">
      <!-- Category Selection -->
      <div class="mb-6">
        <button
          id="category-selector"
          class="w-full bg-white rounded-lg shadow-sm p-4 flex items-center justify-between ripple"
        >
          <span id="current-category" class="font-semibold text-gray-800"
            >Tiffin</span
          >
          <div class="w-6 h-6 flex items-center justify-center">
            <i class="ri-arrow-down-s-line text-gray-600"></i>
          </div>
        </button>
      </div>
      <!-- Dish Grid -->
      <div id="dish-grid" class="grid grid-cols-1 gap-4">
        <!-- Dish cards will be dynamically generated -->
      </div>
    </main>
    <!-- Category Drawer -->
    <div
      id="category-overlay"
      class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden"
    ></div>
    <div
      id="category-drawer"
      class="fixed bottom-0 left-0 right-0 bg-white rounded-t-2xl z-50 category-drawer"
    >
      <div class="p-6">
        <div class="w-12 h-1 bg-gray-300 rounded-full mx-auto mb-6"></div>
        <h3 class="text-lg font-semibold text-gray-800 mb-4">
          Select Category
        </h3>
        <div class="space-y-3">
          <button
            class="category-option w-full flex items-center p-4 rounded-lg hover:bg-gray-50 transition-colors ripple"
            data-category="tiffin"
          >
            <span class="text-2xl mr-4">üç±</span>
            <span class="text-gray-700 font-medium">Tiffin</span>
          </button>
          <button
            class="category-option w-full flex items-center p-4 rounded-lg hover:bg-gray-50 transition-colors ripple"
            data-category="meals"
          >
            <span class="text-2xl mr-4">üçΩÔ∏è</span>
            <span class="text-gray-700 font-medium">Meals</span>
          </button>
          <button
            class="category-option w-full flex items-center p-4 rounded-lg hover:bg-gray-50 transition-colors ripple"
            data-category="snacks"
          >
            <span class="text-2xl mr-4">üçø</span>
            <span class="text-gray-700 font-medium">Snacks</span>
          </button>
        </div>
      </div>
    </div>
    <!-- Floating Cart Button -->
    <button
      id="cart-button"
      class="fixed bottom-6 right-6 w-14 h-14 bg-primary rounded-full shadow-lg flex items-center justify-center z-40"
    >
      <div class="w-6 h-6 flex items-center justify-center text-white">
        <i class="ri-shopping-cart-line"></i>
      </div>
      <span
        id="cart-count"
        class="absolute -top-2 -right-2 bg-secondary text-white text-xs rounded-full w-6 h-6 flex items-center justify-center font-semibold hidden"
        >0</span
      >
    </button>
    <!-- Snackbar -->
    <div
      id="snackbar"
      class="fixed bottom-24 left-4 right-4 bg-gray-800 text-white px-4 py-3 rounded-lg shadow-lg snackbar z-30 opacity-0 pointer-events-none"
    >
      <span id="snackbar-text">Added to cart</span>
    </div>
    
    <script src="/javascripts/home1.js"></script>
  </body>
</html>
